<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".fragment.NewsDetalis">

        <ImageView
            android:id="@+id/id_image_for_transition"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/section_style"
            android:transitionName="myTrans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_btn_pin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_pin" />

            <ImageView
                android:id="@+id/id_btn_save"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_bookmark_white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_image_for_transition"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published : "
                android:textSize="22sp" />

            <TextView
                android:id="@+id/id_article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="22sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/id_article_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_linear"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="25sp" />

    </RelativeLayout>
</ScrollView>